<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/RowContainer.VeryTall"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?android:attr/selectableItemBackground"
	android:orientation="vertical">

	<TextView
		android:id="@+id/titleView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:maxLines="2"
		android:paddingBottom="4dp"
		android:textAppearance="@style/TextAppearance.RowTitle"
		tools:text="My favorite things" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/creatorView"
			style="@style/TextWithImage.Secondary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableStart="@drawable/ic_user_small"
			android:drawableLeft="@drawable/ic_user_small"
			tools:text="ccomeaux" />

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/padding_standard"
			android:layout_marginRight="@dimen/padding_standard"
			android:background="@color/list_divider" />

		<TextView
			android:id="@+id/numberOfThumbsView"
			style="@style/TextWithImage.Secondary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableStart="@drawable/ic_thumbs_small"
			android:drawableLeft="@drawable/ic_thumbs_small"
			tools:text="13" />

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/padding_standard"
			android:layout_marginRight="@dimen/padding_standard"
			android:background="@color/list_divider" />

		<TextView
			android:id="@+id/numberOfItemsView"
			style="@style/TextWithImage.Secondary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableStart="@drawable/ic_items_small"
			android:drawableLeft="@drawable/ic_items_small"
			tools:text="42" />

	</LinearLayout>
</LinearLayout>